{
  "name": "webtools",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port ${PORT:=3000}",
    "build": "NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "next start --port ${PORT:=3000}",
    "format": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "lint": "next lint"
  },
  "dependencies": {
    "@nextui-org/react": "^1.0.3-beta.5",
    "@splitbee/web": "^0.3.0",
    "next": "12.1.0",
    "next-themes": "^0.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@fontsource/be-vietnam-pro": "^4.5.2",
    "@fontsource/jetbrains-mono": "^4.5.3",
    "@svgr/webpack": "^6.2.1",
    "@types/node": "^17.0.22",
    "@types/react": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "akar-icons": "^1.9.14",
    "eslint": "~8.11.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "framer-motion": "^6.2.8",
    "prettier": "^2.6.0",
    "sharp": "^0.30.3",
    "typescript": "^4.6.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "next",
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-console": "warn",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@next/next/no-img-element": "off",
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": [
        "warn",
        {
          "groups": [
            [
              "^@?\\w",
              "^\\u0000"
            ],
            [
              "^@/libraries",
              "^@/hooks",
              "^@/components"
            ],
            [
              "^@/styles",
              "^.+\\.s?css$",
              "^@/"
            ],
            [
              "^\\./?$",
              "^\\.(?!/?$)",
              "^\\.\\./?$",
              "^\\.\\.(?!/?$)",
              "^\\.\\./\\.\\./?$",
              "^\\.\\./\\.\\.(?!/?$)",
              "^\\.\\./\\.\\./\\.\\./?$",
              "^\\.\\./\\.\\./\\.\\.(?!/?$)"
            ],
            [
              "^@/types"
            ],
            [
              "^"
            ]
          ]
        }
      ]
    },
    "globals": {
      "React": true,
      "JSX": true
    }
  },
  "eslintIgnore": [
    ".next",
    ".cache",
    "build",
    "dist",
    "out"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "printWidth": 110,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  }
}
